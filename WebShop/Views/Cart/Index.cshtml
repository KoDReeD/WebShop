@model List<WebShop.Models.ViewModels.CartItem>

<form method="post">
    <br/>
    <div class="backgroundWhiteBorder">
        <div class=" row">
            <div class="col">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-4 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Index" asp-controller="Cart"
                               class="btn btn-outline-info btn-sm">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-1 col-lg-1">
                                </div>
                                <div class="col-3 col-lg-3">
                                    Product Details
                                </div>
                                <div class="col-2 col-lg-2">
                                    Price per sqft
                                </div>
                                <div class="col-2 col-lg-2">
                                    Amount
                                </div>
                                <div class="col-2 col-lg-2">
                                    Sum
                                </div>
                                <div class="col-2 col-sm-2 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr/>

                        @foreach (var obj in Model)
                        {
                            var discPrice = obj.Product.Discount > 0 ? (obj.Product.Cost - obj.Product.Cost * obj.Product.Discount / 100) : obj.Product.Cost;
                            <div class="row h-100">
                                <div class="col-1 col-lg-1 text-center py-2">
                                    <img src="@WebConst.ImagePath@obj.Product.PhotoPath" class="rounded" width="100%"/>
                                </div>
                                <div class="col-3 col-lg-3">
                                    <h5>@obj.Product.Name</h5>
                                    <div style="font-size:11px;">@obj.Product.Description</div>
                                </div>
                                <div class="col-2 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;">@discPrice</span>/ sqft
                                </div>
                                <div class="col-2 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;">@obj.Amount</span>/ sqft
                                </div>
                                <div class="col-2 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;">@(discPrice * obj.Amount)</span>/ sqft
                                </div>
                                <div class="col-2 col-lg-2 text-center pt-lg-3">
                                    <a class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                            <hr/>
                        }

                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
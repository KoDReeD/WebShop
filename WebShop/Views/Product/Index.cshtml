@using System.Text.Json
@model List<WebShop.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>

        <div class="col-6">
            <a asp-action="AddEdit" class="btn btn-primary text-right">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br/>

    @if (Model.Count > 0)
    {
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Procent</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td width="50%" style="word-break: break-all">@product.Name</td>
                    <td width="20%">@(product.Discount > 0 ? (product.Cost - product.Cost * product.Discount / 100) : product.Cost)</td>
                    <td width="20%">@product.Discount%</td>
                    <td width="10%">
                        <div class="row">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="AddEdit" class="btn btn-primary mx-2" asp-route-id="@product.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <a asp-action="Delete" class="btn btn-danger mx-2"
                                   asp-route-id="@product.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </div>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Products Not Exsists</p>
    }
</div>
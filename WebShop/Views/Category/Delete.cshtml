@model Category


@* когда форма выполняет post метод, то ищет action *@

<form method="post" asp-action="Delete">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control"/>
                    </div>
                </div>

                <br/>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <textarea rows="1"  readonly asp-for="Title" class="form-control area-resize"></textarea>
                    </div>
                </div>

                <br/>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input readonly asp-for="DisplayOrder" class="form-control"/>
                    </div>
                </div>

                <br/>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete"/>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <script>
        swal.fire({
            title: "@TempData["ErrorMessage"]",
            icon: "@TempData["ErrorType"]"
        });
    </script>
}
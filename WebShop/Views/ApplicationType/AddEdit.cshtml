@model WebShop.Models.ApplicationType

@{
    var title = "Add Application Type";
}

@if (Model.Id != 0)
{
    title = "Edit Application Type";
}
<form method="post" asp-action="AddEdit">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
            <div class="col-12">

                @if (Model.Id == 0)
                {
                    <input asp-for="Id" hidden/>
                }
                else
                {
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Id"></label>
                        </div>
                        <div class="col-8">
                            <input readonly asp-for="Id" class="form-control"/>
                        </div>
                    </div>
                }

                <br/>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <br/>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fas fa-sign-out-alt"></i> Back
                            </a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Save"/>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial"/>}
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        swal.fire({
            title: "@TempData["ErrorMessage"]",
            icon: "@TempData["ErrorType"]"
        });
    </script>
}
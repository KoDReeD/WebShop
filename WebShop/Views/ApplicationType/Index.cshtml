@using System.Text.Json
@model List<ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type</h2>
        </div>

        <div class="col-6">
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Application Type
            </a>
        </div>
    </div>

    <br/>

    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var application in Model)
            {
                <tr>
                    <td width="70%">@application.Name</td>
                    <td width="30%">
                        <div class="row">

                            <div class="w-75 btn-group" role="group">
                                <a asp-action="AddEdit" asp-route-id="@application.Id" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@application.Id" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Application Type Not Exsist</p>
    }
</div>